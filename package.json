{
  "name": "pushit",
  "version": "2.0.0",
  "type": "module",
  "scripts": {
    "dev": "bun run src/index.ts --dry-run",
    "build": "bun build src/index.ts --compile --outfile pushit --minify --bytecode",
    "install": "bun run build && mkdir -p ~/.local/bin && mv pushit ~/.local/bin/ && mkdir -p ~/.config/pushit && cp -n .env ~/.config/pushit/.env 2>/dev/null || true",
    "lint": "eslint src/",
    "typecheck": "tsc --noEmit",
    "format": "prettier --write \"src/**/*.ts\" \"./*.json\" \"./*.md\""
  },
  "dependencies": {
    "@clack/prompts": "^0.11.0",
    "picocolors": "^1.1.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/bun": "^1.3.6",
    "eslint": "^9.39.2",
    "prettier": "^3.8.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.53.0"
  }
}
